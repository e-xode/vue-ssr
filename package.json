{
    "description": "e-xode.vue-ssr",
    "name": "e-xode.vue-ssr",
    "files": [
        "dist"
    ],
    "imports": {
        "#src/*": "./src/*"
    },
    "license": "MIT",
    "main": "./dist/server.js",
    "type": "module",
    "scripts": {
        "build": "npm run build:client && npm run build:server",
        "build:client": "vite --config vite.config.mjs build src/",
        "build:server": "vite --ssr --config vite.server.mjs build",
        "dev": "nodemon src/server/server.mjs",
        "lint": "eslint --ext .js,.vue src",
        "lint:fix": "eslint --fix --ext .js,.vue src",
        "test:unit": "jest --clearCache && jest",
        "test:unit:coverage": "jest --clearCache && jest --coverage",
        "test:unit:watch": "jest --clearCache && jest --watch"
    },
    "version": "0.0.1",
    "babel": {
        "plugins": ["@babel/plugin-syntax-import-attributes"],
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ]
        ]
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:vue/vue3-recommended"
        ],
        "rules": {
            "comma-dangle": [
                "error",
                "never"
            ],
            "no-console": [
                "error"
            ],
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "never"
            ],
            "vue/html-closing-bracket-newline": [
                "error"
            ],
            "vue/html-indent": [
                "error",
                4
            ],
            "vue/multi-word-component-names": "off",
            "vue/no-v-html": "off"
        }
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "mjs",
            "json",
            "vue"
        ],
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        },
        "setupFiles": [

        ],
        "setupFilesAfterEnv": [
            "<rootDir>/src/test/setup.mjs"
        ],
        "testEnvironment": "jsdom",
        "testEnvironmentOptions": {
            "customExportConditions": [
                "node",
                "node-addons"
            ]
        },
        "testMatch": [
            "**/?(*.)+(spec).mjs"
        ],
        "transform": {
            "^.+\\.m?js$": "babel-jest",
            "^.+\\.vue$": "@vue/vue3-jest"
        },
        "transformIgnorePatterns": [
            "/node_modules/"
        ]
    },
    "nodemonConfig": {
        "watch": [
            "src/server/*"
        ]
    },
    "dependencies": {
        "@e-xode/vui": "latest",
        "@tiptap/pm": "^2.2.6",
        "@tiptap/starter-kit": "^2.3.0",
        "@tiptap/vue-3": "^2.3.2",
        "bcrypt": "5.1.1",
        "compression": "1.7.4",
        "dayjs": "^1.11.11",
        "express": "^4.19.2",
        "express-session": "1.18.0",
        "express-socket.io-session": "1.3.5",
        "mitt": "3.0.1",
        "mongodb": "6.5.0",
        "mustache": "4.2.0",
        "nodemailer": "6.9.13",
        "ramda": "0.30.0",
        "session-file-store": "1.5.0",
        "socket.io": "4.7.5",
        "socket.io-client": "4.7.5",
        "text-to-svg-path": "3.1.5",
        "url-slug": "4.0.1",
        "vue": "^3.4.27",
        "vue-i18n": "^9.13.1",
        "vue-router": "4.3.2",
        "vuex": "^4.1.0"
    },
    "devDependencies": {
        "@babel/plugin-syntax-import-attributes": "^7.24.1",
        "@babel/preset-env": "7.24.4",
        "@fortawesome/fontawesome-free": "6.5.2",
        "@vitejs/plugin-vue": "^5.0.4",
        "@vue/test-utils": "2.4.5",
        "@vue/vue3-jest": "29.2.6",
        "eslint": "9.4.0",
        "eslint-plugin-vue": "9.25.0",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "jsdom": "24.0.0",
        "nodemon": "3.1.0",
        "sass": "1.75.0",
        "vite": "^5.2.10",
        "vite-plugin-linter": "2.1.1"
    }
}
